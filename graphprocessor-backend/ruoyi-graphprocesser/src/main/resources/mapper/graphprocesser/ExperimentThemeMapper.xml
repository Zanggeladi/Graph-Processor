<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.graphprocesser.mapper.ExperimentThemeMapper">
    
    <resultMap type="ExperimentTheme" id="ExperimentThemeResult">
        <result property="id"    column="id"    />
        <result property="themeName"    column="theme_name"    />
        <result property="description"    column="description"    />
        <result property="userId"    column="user_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectExperimentThemeVo">
        select id, theme_name, description, user_id, create_by, create_time, update_by, update_time, remark from tb_experiment_theme
    </sql>

    <select id="selectExperimentThemeList" parameterType="ExperimentTheme" resultMap="ExperimentThemeResult">
        <include refid="selectExperimentThemeVo"/>
        <where>  
            <if test="themeName != null  and themeName != ''"> and theme_name like concat('%', #{themeName}, '%')</if>
            <if test="description != null  and description != ''"> and description like concat('%', #{description}, '%')</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectExperimentThemeById" parameterType="Long" resultMap="ExperimentThemeResult">
        <include refid="selectExperimentThemeVo"/>
        where id = #{id}
    </select>

    <insert id="insertExperimentTheme" parameterType="ExperimentTheme" useGeneratedKeys="true" keyProperty="id">
        insert into tb_experiment_theme
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="themeName != null and themeName != ''">theme_name,</if>
            <if test="description != null">description,</if>
            <if test="userId != null">user_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="themeName != null and themeName != ''">#{themeName},</if>
            <if test="description != null">#{description},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateExperimentTheme" parameterType="ExperimentTheme">
        update tb_experiment_theme
        <trim prefix="SET" suffixOverrides=",">
            <if test="themeName != null and themeName != ''">theme_name = #{themeName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExperimentThemeById" parameterType="Long">
        delete from tb_experiment_theme where id = #{id}
    </delete>

    <delete id="deleteExperimentThemeByIds" parameterType="String">
        delete from tb_experiment_theme where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>